<Window x:Class="Maui.Tools.Studio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Maui Studio" Height="483" Width="750">
    <Grid>
        <Menu Height="22" Name="myMenubar" VerticalAlignment="Top">
            <MenuItem Header="File" Name="myFileMenu">
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Tools" Name="myToolsMenu">
                <MenuItem Header="Catalogs ..." Name="myCatalogsMenu" Click="myCatalogsMenu_Click" />
                <MenuItem Header="Sectors ..." Name="mySectorsMenu" Click="mySectorsMenu_Click"/>
                <MenuItem Header="Stocks ..." Name="myStocksMenu" Click="myStocksMenu_Click" />
                <MenuItem Header="New stock ..." Name="myNewStockMenu" Click="myNewStockMenu_Click" />
                <Separator/>
                <MenuItem Header="WebSpy ..." Name="myWebSpyMenu" Click="myWebSpyMenu_Click"/>
            </MenuItem>
        </Menu>
        <TextBox Margin="12,28,12,12" Name="myLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
